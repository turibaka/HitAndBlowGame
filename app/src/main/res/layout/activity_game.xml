<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="プレイヤー1：数字を決めてください" />

        <TextView
            android:id="@+id/textCurrentPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:text="現在：P1" />

        <!-- 進行状況表示エリア -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#E3F2FD"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textRoundInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:text="ラウンド: 1" />

            <TextView
                android:id="@+id/textTurnInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:text="ターン: 1" />

            <TextView
                android:id="@+id/textTotalTurns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#757575"
                android:text="総ターン数: 0" />
        </LinearLayout>

        <!-- ダメージ情報表示 -->
        <TextView
            android:id="@+id/textDamageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="#FFEBEE"
            android:layout_marginTop="4dp"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="P1 ログ"
                    android:textSize="12sp"
                    android:textAlignment="center" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerP1Logs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="P2 ログ"
                    android:textSize="12sp"
                    android:textAlignment="center" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerP2Logs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F9FA"
            android:padding="8dp">

            <TextView
                android:id="@+id/textCurrentInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="36sp"
                android:letterSpacing="0.3"
                android:textStyle="bold"
                android:textColor="#222222"
                android:text="----" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3">
                <Button android:id="@+id/btn1" android:text="1" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn2" android:text="2" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn3" android:text="3" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn4" android:text="4" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn5" android:text="5" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn6" android:text="6" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn7" android:text="7" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn8" android:text="8" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn9" android:text="9" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btnDelete" android:text="×" android:textColor="#E91E63" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/btn0" android:text="0" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
                <Button android:id="@+id/buttonSubmit" android:text="OK" android:textColor="#4CAF50" android:textStyle="bold" style="@style/Widget.AppCompat.Button.Borderless" android:textSize="20sp" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layoutP1Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textP1Hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P1 HP: 100"
                    android:textSize="12sp" />
                <ProgressBar
                    android:id="@+id/progressP1Hp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#FF5252" />
            </LinearLayout>

            <View android:layout_width="16dp" android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/layoutP2Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textP2Hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="P2 HP: 100"
                    android:textSize="12sp" />
                <ProgressBar
                    android:id="@+id/progressP2Hp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="#448AFF"
                    android:scaleX="-1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCardSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6000000"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 HIT! BONUS"
            android:textColor="#FFD700"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button android:id="@+id/btnCard1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" />
        <Button android:id="@+id/btnCard2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" />
        <Button android:id="@+id/btnCard3" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>